/* component/stepper/stepper.wxss */
/*全局样式*/  
  
/*主容器*/  
.stepper {  
  width: 200rpx;  
  height: 60rpx;  
  /*给主容器设一个边框*/  
  border: 1px solid #ccc;  
  border-radius: 3px;  
  display:flex;
  align-items:center;
  font-size:30rpx;
}  
  
/*加号和减号*/  
.stepper text {  
  width: 60rpx;  
  line-height: 60rpx;  
  text-align: center;   
  font-size:36rpx;
}  
  
/*数值*/  
.stepper input {  
  width: 80rpx;  
  height: 60rpx;  
  /* float: left;   */
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
  color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
}